generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  name         String
  email        String    @unique
  passwordHash String
  accounts     Account[]
  createdAt    DateTime  @default(now())
}

model Account {
  id            String         @id @default(cuid())
  accountNumber String         @unique
  balance       Decimal        @default(0.0)
  userId        String
  user          User           @relation(fields: [userId], references: [id])
  cards         Card[]

  outgoingTransactions Transaction[] @relation("TransactionSender")
  incomingTransactions Transaction[] @relation("TransactionReceiver")
}

model Transaction {
  id         String   @id @default(cuid())
  senderId   String
  receiverId String
  amount     Decimal
  status     String
  createdAt  DateTime @default(now())

  sender     Account  @relation("TransactionSender", fields: [senderId], references: [id])
  receiver   Account  @relation("TransactionReceiver", fields: [receiverId], references: [id])
}

model Card {
  id        String  @id @default(cuid())
  cardNumber String
  expiry     String
  isFrozen   Boolean @default(false)
  accountId  String
  account    Account @relation(fields: [accountId], references: [id])
}
